<%= form_for @question do |f| %>
  <%= hidden_field_tag 'question[tag_list]' %> 
  <%= f.label :subject, 'Subject' %>
  <%= f.text_field :subject %>
  <%= f.label :description, 'Description' %>
  <%= f.text_area :description, :class => "input-xlarge" %> </br>
  <div id="tags" data-tags-url="<%= tags_path %>" data-question-id="<%= @question.id unless @question.new_record? %>">
      <%= text_field_tag :tags %>
  </div>
  <%= f.submit %>
   <%= link_to "Cancel", questions_path %>
<% end %>
