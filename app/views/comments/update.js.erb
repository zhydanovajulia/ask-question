<% if flash.now[:alert] %>
	$('.flash').html("<%=j render 'layouts/flash_messages', :flash => flash %>");
<% else %>	
	$('.comments.<%= dom_id(@comment.answer) %> #<%= dom_id(@comment) %> .comment-table .<%= dom_id(@comment) %>').text("<%= @comment.body %>")
	$('.comments.<%= dom_id(@comment.answer) %> #<%= dom_id(@comment) %> .edit-comment.<%= dom_id(@comment) %>').slideUp('slow')
<% end %>
